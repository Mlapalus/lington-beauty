{% set style = "padding-left: 7px; padding-right: 7px" %}

<ul class="navbar-nav">
    <li class="nav-item">
        <a class="nav-link" style="{{ style }}" href="{{ path('/') }}">Accueil</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" style="{{ style }}" href="{{ path('/galery') }}">La Gallerie</a>
    </li>
